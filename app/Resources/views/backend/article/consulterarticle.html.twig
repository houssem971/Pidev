{% extends 'base2.html.twig' %}
{% block content %}
    <div class="page-content-wrapper">
        <div class="page-content-wrapper-inner">
            <div class="viewport-header">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb has-arrow">
                        <li class="breadcrumb-item">
                            <a href="#">Dashboard</a>
                        </li>

                        <li class="breadcrumb-item active" aria-current="page">liste des articles </li>
                    </ol>
                </nav>
            </div>
            <div class="content-viewport">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="grid">
                            <p class="grid-header"> liste des articles</p>
                            <div class="item-wrapper">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                        <tr>
                                            <th>Image</th>
                                            <th>Nom</th>
                                            <th>Categorie</th>
                                            <th>prix</th>
                                            <th>Description</th>
                                            <th>Date de publication</th>
                                            <th>Supprimer</th>
                                            <th>Modifier</th>

                                            <th>facebook</th>

                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for posts in posts %}
                                        <tr>
                                            <td class="d-flex align-items-center border-top-0">
                                                <img src="{{ asset('uploads/post/' ~ posts.image) }}" width="200px" height="200px"/>

                                            </td>

                                            <td>{{ posts.nom }}</td>
                                            <td>{{ posts.categorie.nomCategorie }}</td>
                                            <td>{{ posts.prix }}</td>
                                            <td>{{ posts.description|trim }}</td>
                                            <td>{{ posts.date|date() }} </td>

                                            <td class="actions">
                                                <i ><a href="{{path('deleteProduit',{'id': posts.id })}}" > <button class="btn btn-primary">Supprimer</button></a> </i>
                                            </td>
                                            <td class="actions">
                                                <i class="mdi mdi-dots-vertical"><a href="{{path('editProduit',{'id': posts.id })}}"> <button class="btn btn-primary">Modifier</button></a> </i>
                                            </td>
                                           <td class="actions">
                                            <iframe src="https://www.facebook.com/plugins/share_button.php?href=http%3A%2F%2Flocalhost.dev%2F2a7_php5%2Fview%2Fafficher_wishlist.php&layout=button_count&size=small&width=83&height=20&appId" width="83" height="20" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowTransparency="true" allow="encrypted-media"></iframe>
                                           </td>
                                        </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                    <div class="navigation">
                                        {{ knp_pagination_render(posts) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- content viewport ends -->
        <!-- partial:../../partials/_footer.html -->

        <!-- partial -->
    </div>
    <!-- page content ends -->
</div>
{% endblock %}