{% extends 'base2.html.twig' %}
{% block content %}

    <!-- partial -->
    <div class="page-content-wrapper">
        <div class="page-content-wrapper-inner">
            <div class="viewport-header">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb has-arrow">
                        <li class="breadcrumb-item">
                            <a href="#">Dashboard</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="#"> Ajouter </a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Blog</li>
                    </ol>
                </nav>
            </div>
            <div class="content-viewport">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="grid">
                            <p class="grid-header">Ajouter Blog</p>
                            <div class="grid-body">
                                <div class="item-wrapper">
                                    <div class="row mb-3">

                                        <div class="col-md-8 mx-auto">
                                            {{ form_start(form) }}
                                            <div class="form-group row showcase_row_area">
                                                <div class="col-md-3 showcase_text_area">
                                                    <label for="inputType1">Nom</label>
                                                </div>
                                                <div class="col-md-9 showcase_content_area">
                                                   {{ form_widget(form.nom,{'attr': {'class' : 'form-control'}}) }}
                                                </div>
                                            </div>
                                            <div class="form-group row showcase_row_area">
                                                <div class="col-md-3 showcase_text_area">
                                                    <label for="inputType12">Description</label>
                                                </div>
                                                <div class="col-md-9 showcase_content_area">
                                                    {{ form_widget(form.description,{'attr': {'class' : 'form-control'}}) }}
                                                </div>
                                            </div>
                                            <div class="form-group row showcase_row_area">
                                                <div class="col-md-3 showcase_text_area">
                                                    <label for="inputType13">categorie</label>
                                                </div>
                                                <div class="col-md-9 showcase_content_area">
                                                    {{ form_widget(form.categorie,{'attr': {'class' : 'form-control'}}) }}
                                                </div>
                                            </div>
                                            <div class="form-group row showcase_row_area">
                                                <div class="col-md-3 showcase_text_area">
                                                    <label for="inputType1">date de publication</label>
                                                </div>
                                                <div class="col-md-9 showcase_content_area">
                                                    {{ form_widget(form.dateAjout,{'attr': {'class' : 'form-control'}}) }}
                                                </div>
                                            </div>

                                            <div class="form-group row showcase_row_area">
                                                <div class="col-md-3 showcase_text_area">
                                                    <label for="inputType9">Image 1</label>
                                                </div>
                                                <div class="col-md-9 showcase_content_area">
                                                    {{ form_widget(form.image1,{'attr': {'class' : 'form-control'}}) }}
                                                </div>

                                            </div>
                                            <div class="form-group row showcase_row_area">
                                                <div class="col-md-3 showcase_text_area">
                                                    <label for="inputType9">Image 2</label>
                                                </div>
                                                <div class="col-md-9 showcase_content_area">
                                                    {{ form_widget(form.image2,{'attr': {'class' : 'form-control'}}) }}
                                                </div>

                                            </div>
                                            <div class="form-group row showcase_row_area">
                                                <div class="col-md-3 showcase_text_area">
                                                    <label for="inputType9">Image 3</label>
                                                </div>
                                                <div class="col-md-9 showcase_content_area">
                                                    {{ form_widget(form.image3,{'attr': {'class' : 'form-control'}}) }}
                                                </div>

                                            </div>
                                            <br><br>
                                            <div class="col-md-9 showcase_content_area">
                                                <input type="submit" class="btn btn-primary">
                                            </div>
                                        </div>
{{ form_end(form) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <!-- partial -->
    </div>
    <!-- page content ends -->
</div>
{% endblock %}